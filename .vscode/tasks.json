// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build C++",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17",
          "-O2",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "C++ 컴파일 명령어"
      }
    ]
  }
  